<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Webkul_MpWalletSystem::walletsystem" title="Webkul  Marketplace Wallet System" sortOrder="10" >
                    <resource id="Webkul_MpWalletSystem::wallet" title= "Marketplace Wallet System Details" sortOrder="10">
                    </resource>
                    <resource id="Webkul_MpWalletSystem::banktransfer" title= "Marketplace Wallet System Bank Transfer Details" sortOrder="11">
                    </resource>
                    <resource id="Webkul_MpWalletSystem::walletamount" title="Adjust Amount to Wallet" sortOrder="12">
                    </resource>
                    <resource id="Webkul_MpWalletSystem::walletcreditrules" title= "Marketplace Wallet System Credit Rules" sortOrder="13">
                    </resource>
                    <resource id="Webkul_MpWalletSystem::walletpayee" title= "Marketplace Wallet System Payee Details" sortOrder="13">
                    </resource>
                    <resource id="Webkul_MpWalletSystem::adminwallet" title= "Manage Admin Wallet" sortOrder="15">
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Webkul_MpWalletSystem::config_walletsystem" title="Walletsystem Configuration section" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>